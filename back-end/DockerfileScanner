FROM golang:1.22-alpine AS builder

WORKDIR /app

COPY . .

RUN go mod download && go mod verify

RUN go build -v -o app ./cmd/scanner/

RUN mkdir /output
RUN mv app /output/app

FROM alpine:latest

COPY --from=builder /output/app ./app
COPY ./resources/seeds /resources/seeds

EXPOSE 8888

CMD ["./app"]
