FROM golang:1.22-alpine

WORKDIR /app

COPY . /app

RUN go mod download && go mod verify

RUN apk add --no-cache --upgrade bash
RUN ./generate-swagger.sh
RUN go build -v -o app ./cmd/web/

RUN mkdir /output
RUN mv app /output/app

FROM alpine:latest

COPY --from=0 /output/app ./app

EXPOSE 8888

CMD ["./app"]
